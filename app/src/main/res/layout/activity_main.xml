<?xml version="1.0" encoding="utf-8"?>
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:columnCount="3"
                android:padding="5sp"
                android:rowCount="10">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"

                    android:layout_marginTop="16dp"
                    android:letterSpacing="0.8"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:text="Arduino Project"
                    android:textAlignment="center"
                    android:textColor="#ffd700"
                    android:textSize="43sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:text="     AQSA ISHA        20SW14"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="50sp"
                    android:paddingLeft="10sp"
                    android:text="Items"
                    android:textColor="#F44336"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="50sp"
                    android:text="QTY"
                    android:textAlignment="center"
                    android:textColor="#F44336"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="50sp"
                    android:text="Price per Item"
                    android:textAlignment="textEnd"
                    android:textColor="#F44336"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="30sp"
                    android:text="BOARD"
                    android:textColor="#2196F3"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/AB_Qty_input"
                    android:layout_width="0dp"
                    android:layout_height="40sp"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="30sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/AB_Price_Input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="30sp"
                    android:ems="10"
                    android:hint="RS: 0"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Light sensor"
                    android:textColor="#2196F3"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/LS_Qty_input"
                    android:layout_width="0dp"
                    android:layout_height="40sp"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/LS_Price_Input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:ems="10"
                    android:hint="RS: 0"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Bluetooth"
                    android:textColor="#2196F3"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/B_Qty_input"
                    android:layout_width="0dp"
                    android:layout_height="40sp"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/B_Price_Input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:ems="10"
                    android:hint="RS: 0"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Wifi Module"
                    android:textColor="#2196F3"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/W_Qty_input"
                    android:layout_width="0dp"
                    android:layout_height="40sp"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/W_Price_Input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:ems="10"
                    android:hint="RS: 0"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="30sp"
                    android:text="APPLY Discount"
                    android:textColor="#F44336"
                    android:textSize="30sp" />

                <Spinner
                    android:id="@+id/Discount_input"
                    android:layout_width="0dp"
                    android:layout_height="40sp"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="30sp"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="40sp"
                    android:backgroundTint="#009688"
                    android:onClick="Calculate_Bill"
                    android:text="CALCULATE BILL"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:paddingLeft="10sp"
                    android:text=" Bill"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:text="Discount"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:text="  WITH DISOUNT"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/total_bill_output"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:paddingLeft="10sp"
                    android:text="00.0"
                    android:textColor="#ffa500"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_discount_output"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:text="00%"
                    android:textAlignment="center"
                    android:textColor="#ffd700"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/new_bill_output"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:text="00.0"
                    android:textAlignment="textEnd"
                    android:textColor="#00ff00"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
